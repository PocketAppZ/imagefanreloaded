<UserControl x:Class="ImageFanReloaded.Controls.ThumbnailBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Margin="5" Background="LightGray"
             MouseUp="OnMouseClick">
    <Border Name="_thumbnailBoxBorder" BorderThickness="5" BorderBrush="LightGray">
        <StackPanel Orientation="Vertical">
            <Image Name="_thumbnailImage" HorizontalAlignment="Center" Stretch="None"/>
            <TextBlock Name="_thumbnailTextBlock" Margin="0, 3, 0, 0"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
