<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ImageFanReloaded.Views.Implementation.ImageWindow"
		Icon="/Assets/MainWindowIcon.ico"
		WindowStartupLocation="CenterScreen"
		WindowState="FullScreen"
        FontSize="12"
        Background="Black"
        PointerReleased="OnMouseUp"
		PointerWheelChanged="OnMouseWheel">
	<ScrollViewer Name="_imageScrollViewer"
				  PointerWheelChanged="OnMouseWheel">
		<Image Name="_image"
			   Stretch="None"
			   PointerPressed="OnMouseDown"
			   PointerWheelChanged="OnMouseWheel"/>
	</ScrollViewer>
</Window>
