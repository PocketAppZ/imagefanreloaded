<UserControl x:Class="ImageFanReloaded.Controls.Implementation.ThumbnailBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Margin="5"
             Background="LightGray"
             MouseUp="OnMouseClick">
    <Border Name="_thumbnailBoxBorder"
            BorderThickness="5"
            BorderBrush="LightGray">
        <StackPanel Orientation="Vertical">
            <Image Name="_thumbnailImage"
                   HorizontalAlignment="Center"
                   Stretch="None"/>
            <TextBlock Name="_thumbnailTextBlock"
                       Margin="0, 3, 0, 0"
                       HorizontalAlignment="Center"
                       Foreground="Black"/>
        </StackPanel>
    </Border>
</UserControl>
